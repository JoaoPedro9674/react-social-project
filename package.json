{
    "name": "letters-social",
    "version": "0.10.0",
    "description": "Sample application for React in Action",
    "main": "./src/index.js",
    "@std/esm": {
        "esm": "all",
        "cjs": true
    },
    "now": {
        "name": "letters-social",
        "alias": "social.react.sh"
    },
    "scripts": {
        "api": "node -r @std/esm ./db/db.js",
        "build:app": "webpack -p --progress --config ./build/webpack.config.prod.js",
        "server:dev": "nodemon --config nodemon.json index.js",
        "build:client": "react-scripts build",
        "coverage": "cat ./coverage/lcov.info | coveralls",
        "client:dev": "webpack-dashboard -- webpack-dev-server --config ./build/webpack.config.js",
        "client:test": "jest --coverage --silent",
        "client:test:watch": "jest --watch",
        "build": "npm-run-all build:app db:seed",
        "dev": "npm-run-all -p api client:dev server:dev styles:w",
        "db:seed": "node -r @std/esm db/seed.js",
        "styles:w":
            "npm run styles && node-sass src/styles/styles.scss -o static/ -w src/styles --watch --recursive",
        "styles": "node-sass --quiet src/styles/styles.scss -o static/",
        "start:dev": "node -r @std/esm run/dev.js",
        "rundep": "react-scripts start",
        "test": "npm run client:test && npm run coverage",
        "start": "node -r @std/esm ./index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/react-in-action/letters-social.git"
    },
    "author": "Mark Thomas <mark@ifelse.io>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/react-in-action/letters-social/issues"
    },
    "engines": {
        "node": "8.4.0",
        "npm": "5.4.0"
    },
    "jest": {
        "testEnvironment": "jsdom"
    },
    "homepage": "https://github.com/react-in-action/letters-social#readme",
    "dependencies": {
        "@std/esm": "0.7.1",
        "autoprefixer": "7.1.3",
        "axios": "0.16.2",
        "babel-loader": "7.1.2",
        "babel-plugin-transform-class-properties": "6.24.1",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-react": "6.24.1",
        "babel-register": "6.26.0",
        "bad-words": "1.5.1",
        "bluebird": "3.5.0",
        "body-parser": "1.17.2",
        "bootstrap-sass": "3.3.7",
        "browser-sync": "2.18.13",
        "chalk": "2.1.0",
        "cheerio": "0.22.0",
        "compression": "1.7.0",
        "connect-history-api-fallback": "1.3.0",
        "cookie-parser": "1.4.3",
        "cookies": "0.7.1",
        "cors": "2.8.4",
        "debug": "2.6.3",
        "enroute": "1.0.1",
        "environs": "0.4.5",
        "enzyme": "2.9.1",
        "express": "4.15.4",
        "express-session": "1.15.5",
        "faker": "4.1.0",
        "firebase": "4.3.0",
        "firebase-admin": "5.2.1",
        "flexboxgrid": "6.3.1",
        "helmet": "3.8.1",
        "history": "4.7.2",
        "hpp": "0.2.2",
        "invariant": "2.2.2",
        "isomorphic-fetch": "2.2.1",
        "json-server": "0.12.0",
        "loaders.css": "0.1.2",
        "localforage": "1.5.0",
        "lodash": "4.17.4",
        "moment": "2.18.1",
        "morgan": "1.8.2",
        "node-uuid": "1.4.8",
        "npm-run-all": "4.1.1",
        "ora": "1.3.0",
        "parse-link-header": "1.0.1",
        "raven": "^2.1.2",
        "react": "16.0.0-beta.5",
        "react-dom": "16.0.0-beta.5",
        "react-redux": "5.0.6",
        "react-router": "3.0.5",
        "react-router-redux": "3.0.0",
        "redux": "3.7.2",
        "redux-logger": "3.0.6",
        "redux-thunk": "2.2.0",
